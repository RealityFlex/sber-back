{{define "Prod"}}

{{$host := .}}


{ 
    "endpoint": "/api/user/me",
    "method": "GET",
    "output_encoding": "no-op",
    "input_headers": ["*"],
    "input_query_strings": ["*"],
    "extra_config": {
        "auth/validator": {
            "alg": "RS256",
            "jwk_url": "{{ $host }}/jwk",
            "disable_jwk_security": true,
            "operation_debug": true,
            "propagate_claims": [
            ["exp", "exp"],
            ["sub", "sub"]
            ]
        }
    },
    "backend": [
        {
        "host": ["{{ $host }}"],
        "url_pattern": "/me",
        "method": "GET"
        }
    ]
},
{ 
    "endpoint": "/api/auth/signup",
    "method": "POST",
    "output_encoding": "no-op",
    "input_headers": ["*"],
    "input_query_strings": ["*"],
    "backend": [
        {
        "host": ["{{ $host }}"],
        "url_pattern": "/signup",
        "method": "POST"
        }
    ]
},
{ 
    "endpoint": "/api/auth/login",
    "method": "POST",
    "output_encoding": "no-op",
    "input_headers": ["*"],
    "input_query_strings": ["*"],
    "backend": [
        {
        "host": ["{{ $host }}"],
        "url_pattern": "/login",
        "method": "POST"
        }
    ]
},
{ 
    "endpoint": "/api/auth/refresh",
    "method": "GET",
    "output_encoding": "no-op",
    "input_headers": ["*"],
    "input_query_strings": ["*"],
    "backend": [
        {
        "host": ["{{ $host }}"],
        "url_pattern": "/refresh",
        "method": "GET"
        }
    ]
}



{{end}}